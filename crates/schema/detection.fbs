include "trace_context.fbs";

namespace bridge.schema;

struct BoundingBox {
    x1: float;
    y1: float;
    x2: float;
    y2: float;
}

table Detection {
    box: BoundingBox;
    confidence: float;
    class_id: uint16;
}

table DetectionResult {
    camera_id: uint32;
    frame_number: uint64;
    timestamp_ns: uint64;
    detections: [Detection];

    trace: TraceContext;
}

root_type DetectionResult;
